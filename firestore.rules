rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /applications/{applicationId} {
      // READ: User must be logged in and the docâ€™s userId must equal their UID.
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;

      // CREATE: User can only create docs with their own UID.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // UPDATE: User can only update their own docs.
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;

      // DELETE: User can only delete their own docs.
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;

      // Sub-collections
      match /{subcollection}/{document=**} {
        // Allow full access to sub-collections if the user owns the parent application
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/applications/$(applicationId)).data.userId == request.auth.uid;
      }
    }
  }
}
